{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*"],
    "parserOptions": {
        "project": [
            "packages/propel-core/tsconfig.json",
            "packages/propel-core/tsconfig.lib.json",
            "packages/propel-core/tsconfig.spec.json"
        ]
    },
    "overrides": [
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {
                "@typescript-eslint/no-explicit-any": "off"
            }
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        }
    ]
}
