{
    "name": "propel-core",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "packages/propel-core/src",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nrwl/js:tsc",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/packages/propel-core",
                "tsConfig": "packages/propel-core/tsconfig.lib.json",
                "packageJson": "packages/propel-core/package.json",
                "main": "packages/propel-core/src/index.ts",
                "assets": ["packages/propel-core/*.md"]
            }
        },
        "lint": {
            "executor": "@nrwl/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": ["packages/propel-core/**/*.ts"]
            }
        },
        "test": {
            "executor": "@nrwl/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "packages/propel-core/jest.config.ts",
                "passWithNoTests": true
            }
        },
        "version": {
            "executor": "@jscutlery/semver:version",
            "options": {
                "preset": "conventional"
            }
        },
        "deploy": {
            "executor": "ngx-deploy-npm:deploy",
            "options": {
                "access": "public"
            }
        }
    },
    "tags": []
}
